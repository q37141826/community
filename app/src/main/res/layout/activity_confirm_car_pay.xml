<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_car_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/theme_color"
    tools:context="com.qixiu.intelligentcommunity.mvp.view.activity.home.ConfirmCarPayActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout_title_confirmcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/relativeLayout_carpay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/tomyright5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="车牌号码:" />

            <TextView
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:id="@+id/textView_input_carNum_car"
                android:layout_toRightOf="@id/tomyright5"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <View
            android:id="@+id/view_line"
            android:layout_below="@+id/relativeLayout_carpay"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/yancy_grey200"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
        <RelativeLayout
            android:id="@+id/belowme_03"
            android:layout_below="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/tomyright1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="停  车  费:" />

            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="¥"
                android:textColor="@color/yancy_red400"
                android:id="@+id/textView_payhaomuch"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tomyright1" />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/textView_input_payhaomuch_car"
                android:layout_toRightOf="@id/textView_payhaomuch"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <View
            android:id="@+id/belowme_05"
            android:layout_below="@+id/belowme_03"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/yancy_grey200"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>


        <Button
            android:layout_marginTop="80dp"
            android:id="@+id/btn_gotopay_car"
            android:layout_below="@id/belowme_05"
            android:textColor="@color/white"
            android:text="确认缴纳"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/sharp_background_darkgrey"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>


</LinearLayout>
