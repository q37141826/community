<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.qixiu.intelligentcommunity.mvp.view.activity.mine.myprofile.SettingActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_title_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relativeLayout_clean_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50dp"
            android:layout_below="@+id/belowme_02"
            android:paddingBottom="@dimen/margin10dp"
            android:paddingLeft="@dimen/margin20dp"
            android:paddingRight="@dimen/margin20dp">

            <TextView
                android:textColor="@color/yancy_grey700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="清除缓存"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/tomyleft01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin5dp"
                android:src="@mipmap/my_back_icon3x" />

        </RelativeLayout>

        <View
            android:id="@+id/belowme_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5dp"
            android:layout_below="@+id/relativeLayout_clean_setting"
            android:layout_marginLeft="@dimen/margin15dp"
            android:layout_marginRight="@dimen/margin15dp"
            android:background="@color/theme_color"></View>

        <RelativeLayout
            android:id="@+id/relativeLayout_feed_back_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50dp"
            android:layout_below="@+id/belowme_01"
            android:paddingBottom="@dimen/margin10dp"
            android:paddingLeft="@dimen/margin20dp"
            android:paddingRight="@dimen/margin20dp">

            <TextView
                android:textColor="@color/yancy_grey700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="意见反馈"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/tomyleft02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin5dp"
                android:src="@mipmap/my_back_icon3x" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5dp"
            android:layout_below="@+id/relativeLayout_feed_back_setting"
            android:layout_marginLeft="@dimen/margin15dp"
            android:layout_marginRight="@dimen/margin15dp"
            android:background="@color/theme_color"></View>

        <Button
            android:id="@+id/btn_out_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:layout_below="@+id/relativeLayout_feed_back_setting"
            android:layout_marginLeft="@dimen/margin60dp"
            android:layout_marginRight="@dimen/margin60dp"
            android:layout_marginTop="@dimen/margin100dp"
            android:background="@drawable/shape_meaterial_button_bg"
            android:text="退出登录"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>
