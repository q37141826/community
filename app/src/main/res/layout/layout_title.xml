<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/titile_main"
              android:layout_width="match_parent"
              android:layout_height="@dimen/margin45dp"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:src="@mipmap/back"
            />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/margin50dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:text="关闭"
            android:textSize="14sp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_title_right"
            android:layout_width="@dimen/margin60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="更多"
                android:textSize="14sp"
                />
            <TextView
                android:visibility="gone"
                android:background="@drawable/back_red_circle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin13dp"
                android:layout_marginTop="@dimen/margin10dp"
                android:id="@+id/tv_message_num"
                android:layout_width="@dimen/margin16dp"
                android:layout_height="@dimen/margin16dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text=""
                android:textSize="10sp"
                />


                  </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:text="请修改标题"
            android:textSize="@dimen/d_mainTitle16"/>

    </RelativeLayout>

    <!--<View-->
    <!--android:id="@+id/v_line"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.3dp"-->
    <!--android:background="@color/txt_E5E5E5"/>-->

</LinearLayout>