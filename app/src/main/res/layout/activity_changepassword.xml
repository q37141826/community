<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/relativeLayout_title_changgepsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp">

            <TextView
                android:textColor="@color/yancy_grey700"
                android:id="@+id/tomyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin15dp"
                android:drawableLeft="@mipmap/minimap2x"
                android:drawablePadding="@dimen/margin10dp"
                android:text="手机号:"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edittext_phone_changepsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_toRightOf="@id/tomyright"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin0.5dp"
                android:layout_alignLeft="@+id/edittext_phone_changepsw"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/margin15dp"
                android:background="@color/yancy_grey300"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp">

            <TextView
                android:textColor="@color/yancy_grey700"
                android:id="@+id/tomyright1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin15dp"
                android:drawableLeft="@mipmap/changepsw_code"
                android:drawablePadding="@dimen/margin10dp"
                android:text="验证码:"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edittext_code_changepsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_toRightOf="@id/tomyright1"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="15sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin0.5dp"
                android:layout_alignLeft="@+id/edittext_code_changepsw"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/margin15dp"
                android:background="@color/yancy_grey300"></View>

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/textView_sendcode_psw"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin35dp"
                android:layout_alignBottom="@+id/view"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin5dp"
                android:layout_marginRight="@dimen/margin15dp"
                android:layout_marginTop="@dimen/margin5dp"
                android:background="@drawable/shape_changepsw_input_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/margin10dp"
                android:paddingRight="@dimen/margin10dp"
                android:text="发送验证码"
                android:textColor="@color/font_grey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp">

            <TextView
                android:textColor="@color/yancy_grey700"
                android:id="@+id/tomyright2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin15dp"
                android:drawableLeft="@mipmap/changepsw_lock2x"
                android:drawablePadding="@dimen/margin10dp"
                android:text="新密码:"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin0.5dp"
                android:layout_alignLeft="@+id/edittext_newPsw_changepsw"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/margin15dp"
                android:background="@color/yancy_grey300"></View>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/edittext_newPsw_changepsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_toRightOf="@+id/tomyright2"
                android:background="@null"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_confirm_pswchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:layout_marginLeft="@dimen/margin50dp"
            android:layout_marginRight="@dimen/margin50dp"
            android:layout_marginTop="@dimen/margin80dp"
            android:background="@drawable/sharp_background_darkgrey"
            android:text="确认" />
    </LinearLayout>


</LinearLayout>