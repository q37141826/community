<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center|top"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout

        app:tabIndicatorColor="@color/theme_color"
        app:tabSelectedTextColor="@color/theme_color"
        app:tabTextColor="@color/gray"
        android:id="@+id/tablelayout_owner_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.design.widget.TabLayout>

    <com.qixiu.intelligentcommunity.mvp.view.widget.hviewpager.HackyViewPager
        android:id="@+id/viewpager_owner_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tablelayout_owner_circle"
        android:background="@color/white" />


</LinearLayout>
