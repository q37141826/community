<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/diliver_505050"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/tv_store_picture"
        android:background="@color/white"
        android:layout_margin="@dimen/margin3dp"
        android:elevation="@dimen/margin3dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/margin160dp"

        />

    <TextView
        android:id="@+id/tv_item_title"
        style="@style/styles_store_item_tv"
        android:layout_marginTop="@dimen/margin5dp"
        android:maxLines="2"
        android:minLines="2"
        android:text=""/>

    <TextView
        android:id="@+id/tv_item_price"
        style="@style/styles_store_item_tv"
        android:layout_marginTop="@dimen/margin5dp"
        android:text=""
        android:textColor="@color/txt_FD5865"
        />
</LinearLayout>