<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_goods_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:fitsSystemWindows="true"
    tools:context="com.qixiu.intelligentcommunity.mvp.view.activity.home.get_goods.GetGoodsRecordActivity">

    <RelativeLayout
        android:id="@id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <LinearLayout
        android:layout_below="@id/vg_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swip_refresh_getGoods_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.qixiu.intelligentcommunity.mvp.view.widget.xrecyclerview.XRecyclerView
                android:id="@+id/recyclerView_getgoods_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.qixiu.intelligentcommunity.mvp.view.widget.xrecyclerview.XRecyclerView>


        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/kongbaiye2x"
            android:id="@+id/imageView_nothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


</RelativeLayout>
