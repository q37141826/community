<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/public_appbar_layout"/>

    <com.qixiu.intelligentcommunity.mvp.view.widget.xrecyclerview.XRecyclerView
        android:id="@+id/rl_footprint_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:divider="@null"
        android:focusable="false"
        android:listSelector="@color/transparent"
        android:paddingTop="18dp"
        android:scrollbars="none"
        />

    <LinearLayout
        android:id="@+id/ll_input_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_ed"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/input_comment"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_input_comment"
            android:enabled="false"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="说你想说..."
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="14dp"/>

    </LinearLayout>

</LinearLayout>