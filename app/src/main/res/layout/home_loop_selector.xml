<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin18dp"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_First"
        android:layout_width="0px"
        android:layout_height="@dimen/margin55dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/home_pay2x"
        android:gravity="center"

        android:textColor="@color/font_grey" />

    <TextView
        android:id="@+id/textView_Second"
        android:layout_width="0px"
        android:layout_height="@dimen/margin55dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/home_carpay2x"
        android:gravity="center"

        android:textColor="@color/font_grey" />

    <TextView
        android:id="@+id/textView_Third"
        android:layout_width="0px"
        android:layout_height="@dimen/margin55dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/home_fixonline2x"
        android:gravity="center"

        android:text="在线报修"
        android:textColor="@color/font_grey" />

    <TextView
        android:id="@+id/textView_Forth"
        android:layout_width="0px"
        android:layout_height="@dimen/margin55dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/home_getgoods2x"
        android:gravity="center"
        android:text="快递收取"
        android:textColor="@color/font_grey" />

</LinearLayout>