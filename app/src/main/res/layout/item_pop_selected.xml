<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_pop_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/margin10dp"
            android:id="@+id/textView_pinyin"
            android:layout_marginBottom="@dimen/margin12dp"
            android:layout_marginTop="@dimen/margin12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/textView_pinyin"
            android:singleLine="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/textView_pop_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin12dp"
            android:layout_marginTop="@dimen/margin12dp"
            android:drawablePadding="@dimen/margin5dp"
            android:textColor="@color/font_grey"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"
        android:layout_alignLeft="@id/rl_pop_selected"
        android:layout_alignRight="@id/rl_pop_selected"
        android:layout_below="@id/rl_pop_selected"
        android:background="@color/txt_E5E5E5"></View>
</RelativeLayout>