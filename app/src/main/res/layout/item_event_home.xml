<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin140dp"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:id="@+id/relativeLayout_event_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin5dp">

        <ImageView
            android:id="@+id/imageView_event_home_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin84dp"
            android:layout_margin="@dimen/margin5dp"
            android:background="@color/white"
            android:elevation="@dimen/margin5dp"
            android:scaleType="fitXY" />

    </RelativeLayout>
    <TextView
        android:textSize="15sp"
        android:text="查看更多活动"
        android:textColor="@color/theme_color"
        android:paddingTop="@dimen/margin40dp"
        android:gravity="center"
        android:id="@+id/textView_goto_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TextView>
    <RelativeLayout
        android:layout_below="@+id/relativeLayout_event_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:ellipsize="end"
            android:maxLength="6"
            android:gravity="center"
            android:id="@+id/textView_title_event_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15dp"
            android:layout_marginTop="@dimen/margin5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/textView_event_state_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15dp"
            android:layout_marginTop="@dimen/margin5dp"
            android:gravity="right"
            android:textColor="@color/default_clickable_color"
            android:textSize="@dimen/font_size_12" />

    </RelativeLayout>

</RelativeLayout>