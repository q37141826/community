<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativelayout_home_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--用户选项-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin130dp"
                android:layout_marginTop="@dimen/margin100dp"
                android:background="@color/white">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:layout_marginTop="@dimen/margin80dp"
                    android:layout_marginRight="@dimen/margin10dp"
                    android:visibility="gone">

                    <TableRow>

                        <TextView
                            android:id="@+id/textView_wuyePay"
                            android:layout_width="0px"
                            android:layout_height="@dimen/margin60dp"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/home_pay2x"
                            android:gravity="center"
                            android:text="物业缴费"
                            android:textColor="@color/font_grey" />

                        <TextView
                            android:id="@+id/textView_carPay"
                            android:layout_width="0px"
                            android:layout_height="@dimen/margin60dp"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/home_carpay2x"
                            android:gravity="center"
                            android:text="停车缴费"
                            android:textColor="@color/font_grey" />

                        <TextView
                            android:id="@+id/textView_fixonline_homefragment"
                            android:layout_width="0px"
                            android:layout_height="@dimen/margin60dp"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/home_fixonline2x"
                            android:gravity="center"
                            android:text="在线报修"
                            android:textColor="@color/font_grey" />

                        <TextView
                            android:id="@+id/textView_goodsget_home"
                            android:layout_width="0px"
                            android:layout_height="@dimen/margin60dp"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/home_getgoods2x"
                            android:gravity="center"
                            android:text="快递收取"
                            android:textColor="@color/font_grey" />

                    </TableRow>

                    <TableRow android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_second_hand_market"
                            android:layout_width="0px"
                            android:layout_height="@dimen/margin60dp"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/home_secondhand2x"
                            android:gravity="center"
                            android:text="二手市场"
                            android:textColor="@color/font_grey" />

                        <TextView
                            android:id="@+id/tv_seekhelp"
                            android:layout_width="0px"
                            android:layout_height="@dimen/margin60dp"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/home_forhelp2x"
                            android:gravity="center"
                            android:text="求助帮忙"
                            android:textColor="@color/font_grey" />

                        <TextView
                            android:id="@+id/tv_houseproperty_lease"
                            android:layout_width="0px"
                            android:layout_height="@dimen/margin60dp"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/home_house2x"
                            android:gravity="center"
                            android:text="房产租赁"
                            android:textColor="@color/font_grey" />

                        <TextView
                            android:id="@+id/tv_neighborhood"
                            android:layout_width="0px"
                            android:layout_height="@dimen/margin60dp"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/home_laybord2x"
                            android:gravity="center"
                            android:text="邻里圈"
                            android:textColor="@color/font_grey" />

                    </TableRow>
                </TableLayout>

                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/roll_user_selector"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin129dp"
                    android:layout_centerVertical="true"></com.jude.rollviewpager.RollPagerView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin10dp"
                android:background="@color/diliver_505050"></RelativeLayout>

            <com.qixiu.intelligentcommunity.mvp.view.widget.xrecyclerview.XRecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.qixiu.intelligentcommunity.mvp.view.widget.xrecyclerview.XRecyclerView>
            <!--一键开门-->
            <LinearLayout
                android:id="@+id/linearlayout_onkeyCall"
                android:layout_width="@dimen/screenwith"

                android:layout_height="@dimen/screenwith_half"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView_commnityManager_home"
                    android:layout_width="@dimen/screenwith_half"
                    android:layout_height="@dimen/screenwith_half"
                    android:src="@drawable/commnitymanager" />

                <LinearLayout
                    android:layout_width="@dimen/screenwith_half"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/imageView_onkeyOpen"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="@dimen/screenwith_forthper"-->
                    <!--                        android:src="@drawable/commnityonekeyopen" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <!--                            <ImageView-->
                            <!--                                android:id="@+id/imageView_notice_home"-->
                            <!--                                android:layout_width="@dimen/screenwith_forthper"-->
                            <!--                                android:layout_height="match_parent"-->
                            <!--                                android:src="@drawable/commnitynotice" />-->

                            <ImageView
                                android:id="@+id/imageView_home_have_notice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/margin3dp"
                                android:src="@mipmap/home_have_news2x" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <!--                            <ImageView-->
                            <!--                                android:id="@+id/imageView_news_home"-->
                            <!--                                android:layout_width="@dimen/screenwith_forthper"-->
                            <!--                                android:layout_height="match_parent"-->
                            <!--                                android:src="@drawable/commnitynews" />-->

                            <ImageView
                                android:id="@+id/imageView_home_have_news"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/margin3dp"
                                android:src="@mipmap/home_have_news2x" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin106dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin15dp"
                android:paddingRight="@dimen/margin15dp">

                <LinearLayout
                    android:id="@+id/imageView_notice_home"
                    android:layout_width="@dimen/margin145dp"
                    android:layout_height="@dimen/margin74dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/home_noticebg2x"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin15dp">

                    <TextView
                        android:layout_width="@dimen/margin61dp"
                        android:layout_height="@dimen/margin22dp"
                        android:background="@drawable/home_notice_bg"
                        android:gravity="center"
                        android:text="通知公告"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        android:id="@+id/textViewNoticeMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin9dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/praise_item_default"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/textViewNoticeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_littie_grey"
                        android:textSize="11sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imageView_news_home"
                    android:layout_width="@dimen/margin145dp"
                    android:layout_height="@dimen/margin74dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/home_newsbg2x"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin25dp">

                    <TextView
                        android:layout_width="@dimen/margin61dp"
                        android:layout_height="@dimen/margin22dp"
                        android:background="@drawable/home_news_bg"
                        android:gravity="center"
                        android:text="社区新闻"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        android:id="@+id/textViewNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin9dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/praise_item_default"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/textViewNewsDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_littie_grey"
                        android:textSize="11sp"></TextView>


                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView_onkeyOpen"
                    android:layout_width="@dimen/margin55dp"
                    android:layout_height="@dimen/margin55dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/home_open2x"></ImageView>

                <TextView
                    android:id="@+id/textViewNoticeNum"
                    android:layout_width="@dimen/margin20dp"
                    android:layout_height="@dimen/margin20dp"
                    android:layout_marginLeft="@dimen/margin90dp"
                    android:layout_marginTop="@dimen/margin20dp"
                    android:background="@drawable/back_red_circle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"></TextView>

                <TextView
                    android:id="@+id/textViewNewsNum"
                    android:layout_width="@dimen/margin20dp"
                    android:layout_height="@dimen/margin20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin20dp"
                    android:layout_marginRight="@dimen/margin30dp"
                    android:background="@drawable/back_red_circle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"></TextView>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin10dp"
                android:background="@color/diliver_505050"></View>
            <!--活动专区-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipChildren="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <View
                        android:layout_width="@dimen/margin3dp"
                        android:layout_height="@dimen/margin15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin15dp"
                        android:background="@color/theme_color"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin23dp"
                        android:text="活动报名"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewMoreEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView_event_home"
                        android:text="更多"
                        android:textColor="@color/txt_DBDBDB"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView_event_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin10dp"
                        android:src="@mipmap/homejiantou3x" />
                </RelativeLayout>


                <!--<android.support.v4.view.ViewPager-->
                <!--android:clipChildren="false"-->
                <!--android:id="@+id/viewPager_event_home"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="120dp"-->
                <!--android:layout_below="@id/imageView_event_home"-->
                <!--android:layout_marginTop="7dp"></android.support.v4.view.ViewPager>-->

                <!--因为是横向滑动的，所以把这个设置成宽度自适应-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_event_home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin55dp"></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/linearlayout_progress_circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recyclerview_event_home"
                    android:layout_marginBottom="@dimen/margin25dp"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/imageView_game_center_home"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_below="@id/linearlayout_progress_circle"
                    android:layout_marginTop="@dimen/margin25dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imageView_game_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:background="@color/white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin12dp"
                android:background="@color/white"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin10dp"
                android:background="@color/diliver_505050"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin55dp"
                android:background="@color/white">

                <View
                    android:layout_width="@dimen/margin3dp"
                    android:layout_height="@dimen/margin15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin15dp"
                    android:background="@color/theme_color"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin23dp"
                    android:text="热销商品"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewMoreGoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView_hotgoods"
                    android:text="更多"
                    android:textColor="@color/txt_DBDBDB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView_hotgoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin10dp"
                    android:src="@mipmap/homejiantou3x" />

                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/recycleview_hotwork_home"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/imageView_hotgoods"-->
                <!--android:layout_marginTop="@dimen/margin10dp"></android.support.v7.widget.RecyclerView>-->


            </RelativeLayout>

        </LinearLayout>

        <!--浮动-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:background="@color/white">

            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/roll_view_pager_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin140dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                app:rollviewpager_play_delay="3000" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>