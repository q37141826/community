<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearlayout_photoselect_owen_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="@dimen/margin90dp"
            android:layout_height="@dimen/margin80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="今天"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin80dp"
            >

            <ImageView
                android:id="@+id/iv_photoselect_owen_mine"
                android:layout_width="@dimen/margin80dp"
                android:layout_height="@dimen/margin80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/camera3x"
                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/linearlayout_goto_owenDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/linnearlayout_time"
            android:layout_width="@dimen/margin90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_month_owen_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin17dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView_date_owen_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_back_owen_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_dynamic_photo_owen_mine"
                android:layout_width="@dimen/margin80dp"
                android:layout_height="@dimen/margin80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_mine_video"
                />
            <TextView
                android:layout_marginRight="@dimen/margin15dp"
                android:layout_centerVertical="true"
                android:maxEms="200"
                android:ellipsize="end"
                android:id="@+id/tv_content_owen_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_toRightOf="@+id/iv_dynamic_photo_owen_mine"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>