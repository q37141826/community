<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin80dp"
        android:layout_margin="@dimen/margin10dp"
        android:background="@drawable/sharp_background_grey"
        android:elevation="5dp">

        <TextView
            android:id="@+id/tomyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin12dp"
            android:layout_marginTop="@dimen/margin12dp"
            android:textSize="@dimen/font_size_13"
            android:text="姓名："
            android:textColor="@color/font_grey" />

        <TextView
            android:id="@+id/textView_name_onekeycall_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin12dp"
            android:textSize="@dimen/font_size_13"
            android:layout_toRightOf="@+id/tomyright"
            android:text="这是姓名"
            android:textColor="@color/font_grey" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginTop="@dimen/margin12dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textSize="@dimen/font_size_13"
                android:textColor="@color/font_grey" />

            <TextView
                android:id="@+id/textView_phone_onekeycall_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_13"
                android:text="135545425968"
                android:textColor="@color/yancy_red400" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_onekeycall_item"
            style="@style/black_backgroud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin12dp"
            android:textSize="@dimen/font_size_13"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/onkeycall2x"
            android:drawablePadding="5dp"
            android:text="呼叫片警"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>

